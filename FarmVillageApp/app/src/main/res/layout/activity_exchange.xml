<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.group.farmvillage.Activities.ExchangeActivity"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="591dp"
        android:layout_height="294dp"
        android:layout_weight="1.00">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonOR"
            android:layout_alignStart="@+id/buttonOR"
            android:layout_below="@+id/buttonOR"
            android:layout_marginStart="13dp"
            android:text="Demandeur" />

        <Button
            android:id="@+id/buttonOR"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="OR"
            tools:layout_editor_absoluteX="377dp"
            tools:layout_editor_absoluteY="7dp" />

        <Button
            android:id="@+id/buttonBois"
            android:layout_width="91dp"
            android:layout_height="48dp"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/buttonOR"
            android:text="Bois"
            tools:layout_editor_absoluteX="251dp"
            tools:layout_editor_absoluteY="7dp" />

        <Button
            android:id="@+id/buttonPierre"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_toEndOf="@+id/buttonBois"
            android:text="Pierre"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="7dp" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/buttonOR"
            android:layout_below="@+id/buttonOR"
            android:layout_marginRight="30dp"
            android:layout_marginTop="23dp">


        </RelativeLayout>

        <ListView
            android:id="@+id/ExchangeListeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/relativeLayout"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_alignTop="@+id/relativeLayout" />


        <Button
            android:id="@+id/buttonFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_toEndOf="@+id/buttonPierre"
            android:text="Nourriture" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuantitÃ©"
            android:layout_below="@+id/buttonBois"
            android:layout_alignEnd="@+id/buttonBois" />

    </RelativeLayout>


</LinearLayout>
