<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button-validate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/marronclair"
        android:text="S'enregistrer" />

    <TextView
        android:id="@+id/Username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Nom d'utilisateur" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/AddressMail"
        android:layout_below="@+id/AddressMail"
        android:layout_marginTop="26dp"
        android:text="Mot de passe" />

    <Spinner
        android:id="@+id/faction_choice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button-validate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <TextView
        android:id="@+id/AddressMail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Adresse mail" />
</RelativeLayout>