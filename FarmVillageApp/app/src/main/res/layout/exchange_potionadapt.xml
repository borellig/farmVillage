<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:descendantFocusability="blocksDescendants"

    >


    <TextView
        android:id="@+id/TypePotion"
        style="@style/CustomTextExhangeactivity"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_x="24dp"
        android:layout_y="8dp"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/QtitePotion"
        style="@style/CustomTextExhangeactivity"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/TypePotion"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/TypePotion"
        android:layout_x="172dp"
        android:layout_y="8dp"
        android:text="TextView"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/PotionButtonValidate"
        android:layout_width="128dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/TypePotion"
        android:layout_toEndOf="@+id/TypePotion"
        android:layout_x="436dp"
        android:layout_y="7dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/logopotion" />


</AbsoluteLayout>