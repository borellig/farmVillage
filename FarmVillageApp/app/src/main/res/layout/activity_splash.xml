<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/flashscreen" />

    <ImageView
        android:src="@drawable/titre"
        android:layout_width="800px"
        android:layout_height="300px"
        android:layout_x="600px"
        android:layout_y="250px" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="1000px"
        android:layout_height="50px"
        android:layout_x="500px"
        android:layout_y="650px"/>
    <TextView
        android:layout_width="1000px"
        android:layout_height="50px"
        android:text="Chargement en cours..."
        android:textSize="40px"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_x="550px"
        android:layout_y="750px"/>


</AbsoluteLayout>